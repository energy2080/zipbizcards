<Alloy>
	<Window id="win">
		<View left="0" top="0" width="12%" height="Ti.UI.FILL" backgroundColor="#C5C5C5" layout="vertical">
			<View top="10" width="90%" height="20%" layout="vertical" index="0" onClick="action">
				<ImageView class="logo" image="/images/background.png"></ImageView>
				<Label class="text" text="Background"></Label>
			</View>
			<View top="5" width="90%" height="20%" layout="vertical" index="1" onClick="action">
				<ImageView class="logo" image="/images/aa.png"></ImageView>
				<Label class="text" text="Text"></Label>
			</View>
			<View top="5" width="90%" height="20%" layout="vertical" index="2" onClick="action">
				<ImageView class="logo" image="/images/image.png"></ImageView>
				<Label class="text" text="Images"></Label>
			</View>
			<View top="5" width="90%" height="20%" layout="vertical" index="3" onClick="action">
				<ImageView class="logo" image="/images/print.png"></ImageView>
				<Label class="text" text="Print"></Label>
			</View>
			<Button id="btnSave" top="10" onClick="saveCard" >SAVE</Button>
		</View>
		<View id="viewTools" left="12%" width="0" height="Ti.UI.FILL" backgroundColor="#B1B1B1">
			<View id="viewBackColor" top="10" width="90%" height="35%" backgroundColor="#fff" visible="false">
				<View top="5" left="5" right="5" height="90%">
					<Require src="colorPicker" id="backPicker" type="view"></Require>
				</View>
			</View>
			<View id="viewText" top="10" width="90%" height="100%" layout="vertical" visible="false" >
				<Label top="20" left="0" text="Text" color="#000" class="text"></Label>
				<TextField id="txtText" top="5" width="100%" height="35" backgroundColor="#fff" hintText="Enter text"></TextField>
				<View top="10" left="0" right="0" height="50%" layout="vertical" backgroundColor="#2E2F30">
					<View top="5" left="5" right="5" width="100%" height="25">
						<View left="0" width="75%" backgroundColor="#454545" onClick="showFont">
							<Label id="lblFontName" left="5" color="#fff" class="smallText" touchEnabled="false">Arial</Label>
							<Label right="5" color="#fff" class="smallText" text="˅" touchEnabled="false"></Label>
						</View>
						<TextField id="txtFontSize">11</TextField>
					</View>
					<View top="5" left="5" right="5" width="100%" height="25">
						<View left="0" width="75%" backgroundColor="#454545" onClick="showStyle">
							<Label id="lblFontStyle" left="5" color="#fff" class="smallText" touchEnabled="false">Bold</Label>
							<Label right="5" color="#fff" class="smallText" text="˅" touchEnabled="false"></Label>
						</View>
						<View id="viewFontColor" left="77%" right="5" height="100%" backgroundColor="#fff"></View>
					</View>
					<View top="10" width="100%" height="75%">
						<Require src="colorPicker" id="textPicker" type="view"></Require>
					</View>
				</View>
				<Button id="btnAdd" top="10" height="40" width="50%" color="#fff" onClick="addText">ADD</Button>
			</View>
			<View id="viewImages" top="10" width="100%" height="100%" visible="false">
				<Button id="btnAddImage" onClick="addImage"></Button>
				<ScrollView id="scrlImages" left="0" top="60" width="100%" contentWidth="100%" layout="horizontal" scrollType="vertical"></ScrollView>
			</View>
			<Button id="btnHide" bottom="20" height="40" width="50%" color="red" onClick="hideTools">Close</Button>
		</View>
		<View id="viewCard" left="12%" width="Ti.UI.FILL" height="Ti.UI.SIZE">
			<View id="card" width="95%" height="95%" backgroundColor="#fff">
				
			</View>
		</View>
	</Window>
</Alloy>